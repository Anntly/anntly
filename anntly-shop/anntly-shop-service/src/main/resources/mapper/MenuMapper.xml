<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<!-- mapper 为根元素节点， 一个namespace对应一个mapper -->
<mapper namespace="com.anntly.shop.mapper.MenuMapper">

    <sql id="where">
        <where>
            <if test="params.id != null and params.id != ''">
                and id =#{params.id}
            </if>
            <if test="params.restaurantId != null and params.restaurantId != ''">
                and restaurant_id =#{params.restaurantId}
            </if>
            <if test="params.name != null and params.name != ''">
                and name like concat(concat('%',#{params.name}),'%')
            </if>
            <if test="params.status != null and params.status != ''">
                and status =#{params.status}
            </if>
            and data_status = 1
            <if test="params.orderVal != null and params.orderVal != ''">
                order by ${params.orderVal}
            </if>
        </where>
    </sql>

    <select id="queryPage" resultType="com.anntly.shop.pojo.Menu">
        select id,`name`,description,status,create_time,update_time from tb_menu
        <include refid="where" />
    </select>

</mapper>

